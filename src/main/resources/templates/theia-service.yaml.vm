## FILE: templates/theia-service.yaml.vm
apiVersion: v1
kind: Service
metadata:
  name: ${serviceName}
  namespace: ${namespace}
  labels:

    # old labels â€“ keep them so selectors continue to work
    app: ${appLabel}
    session-name: ${sessionName}


    # Henkan-style standard labels:
    app.kubernetes.io/component: session
    app.kubernetes.io/part-of: theia-cloud

    # Henkan-style theia-cloud labels
    theia-cloud.io/app-definition: ${appDefinitionName}
    theia-cloud.io/session: ${sessionName}
    theia-cloud.io/session-uuid: ${sessionUid}
    theia-cloud.io/user: ${user}


spec:
  type: ${serviceType}
  selector:
    app: ${appLabel}
    session-name: ${sessionName}
  ports:
  - name: http
    port: ${servicePort}
    protocol: TCP
    # Theia sends traffic to the oauth2-proxy "web" port
    targetPort: web
#if( $monitorPort )
  - name: metrics
    port: ${monitorPort}
    protocol: TCP
    targetPort: ${monitorPort}
#end
