apiVersion: v1
kind: Service
metadata:
  name: ${serviceName}
  namespace: ${namespace}
  labels:
    app: ${appLabel}
    session-name: ${sessionName}
spec:
  type: ${serviceType}
  selector:
    app: ${appLabel}
    session-name: ${sessionName}
  ports:
    - name: http
      port: ${servicePort}
      targetPort: ${targetPort}
      protocol: TCP
#if( $monitorPort )
    - name: metrics
      port: ${monitorPort}
      targetPort: ${monitorPort}
      protocol: TCP
#end
